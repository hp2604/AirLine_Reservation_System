<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AvailableSeat</servlet-name>
        <servlet-class>com.airlines.servlet.SeatBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>com.airlines.servlet.Search</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TicketBook</servlet-name>
        <servlet-class>com.airlines.servlet.TicketBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Sign</servlet-name>
        <servlet-class>com.airlines.servlet.Sign</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegenTicket</servlet-name>
        <servlet-class>com.airlines.servlet.RegenTicket</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AvailableSeat</servlet-name>
        <url-pattern>/AvailableSeat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/Search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TicketBook</servlet-name>
        <url-pattern>/TicketBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Sign</servlet-name>
        <url-pattern>/Sign</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegenTicket</servlet-name>
        <url-pattern>/RegenTicket</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
